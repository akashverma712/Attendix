            <div class="login-form">
                <h2>Student Login</h2>
                <form id="loginForm" method="post" action="/">
                    <div class="input-group">
                        <i class="bx bx-user"></i>
                        <input class = "gap" name="email" type="text" id="username" placeholder="Username" required>
                    </div>
                    <div class="input-group">
                        <i class="bx bx-lock"></i>
                        <input class = "gap" type="password" name="unique_id" id="password" placeholder="Password" required>
                    </div>
                    <button  type="submit" class="btn">Login</button>
                </form>
            </div>
        </div>
    
